{
    "name": "workspace",
    "version": "1.0.0",
    "author": "seven332",
    "license": "MIT",
    "scripts": {
        "prepare": "ts-node script prepare",
        "build": "ts-node script build",
        "test": "ts-node script test",
        "format": "ts-node script format",
        "package": "ts-node script package",
        "dev:runner-ui": "pnpm -F runner-ui dev"
    },
    "devDependencies": {
        "@types/jest": "^29.5.10",
        "@types/node": "^20.10.2",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always"
    }
}
